<UserControl x:Class="BoyeoZoom.flowchart_usercontrol.UserControl_selection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoyeoZoom.flowchart_usercontrol"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="190">
    <Grid>
        <TextBox x:Name="textBox_selection" FontFamily="Consolas" FontSize="13" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" MaxHeight="100" Height="70" Width="190" TextWrapping="Wrap" Text="Teadiox" VerticalAlignment="Center" Padding="10,5,10,5" BorderBrush="{x:Null}" CaretBrush="White" Foreground="White" SelectionBrush="#FFFA934B" TextAlignment="Center" Focusable="False" IsReadOnly="True" >
            <TextBox.Background>
                <ImageBrush ImageSource="/image/diamond.png"/>
            </TextBox.Background>
        </TextBox>
    </Grid>
</UserControl>
